<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ssafy.oringe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_org"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo_org"
        android:supportsRtl="true"
        android:theme="@style/Theme.Oringe"
        tools:targetApi="31">
        <activity
            android:name=".activity.record.RecordCreateActivity"
            android:exported="false" >
        </activity>
        <activity
            android:name=".activity.login.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.login.SigninActivity"
            android:exported="false" >
        </activity>
        <activity
            android:name=".activity.common.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.common.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activity.challenge.ChallengeListActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.challenge.ChallengeCreateActivity"
            android:exported="false" />
        <activity
            android:name=".activity.challenge.TemplateActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.challenge.ChallengeDetailActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.common.FullscreenImageActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.common.FullscreenVideoActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>