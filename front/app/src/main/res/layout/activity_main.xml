<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <ImageView
    android:id="@+id/image_logo_org"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/logo_org" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center_horizontal">
    <ImageView
      android:id="@+id/image_main_org"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:src="@drawable/main_org" />

    <ImageView
      android:id="@+id/image_bubble"
      android:layout_width="280dp"
      android:layout_height="100dp"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/image_main_org"
      android:src="@drawable/bubble" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="60dp"
      android:layout_alignStart="@id/image_bubble"
      android:layout_alignTop="@id/image_bubble"
      android:gravity="center"
      android:textColor="@color/black"
      android:text="성주님 \n 오늘도 오린지 하세요!"
      android:textSize="20sp" />

  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:padding="20dp"
    android:textColor="@color/black"
    android:background="@drawable/main_today_radius"
    android:text="04/26 \n 1개의 오린지가 남았어요"
    android:lineSpacingExtra="10dp"
    android:textSize="15sp"/>
  <Button
    android:id="@+id/imageButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:text="오린지 인증하기 ✏"
    android:textColor="#FFFFFF"
    android:background="@drawable/record_btn"
    />
  </LinearLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:gravity="center"
    android:text="오늘의 챌린지"
    android:textColor="@color/black"
    android:textSize="20sp" />
  <LinearLayout
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/main_oringe_list"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="디지털 디톡스"
      android:textColor="@color/black"
      android:textSize="15sp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="50% 달성"
      android:textColor="@color/black"
      android:textSize="15sp" />
    </LinearLayout>

<!--    <RelativeLayout-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="150dp"-->
<!--      android:gravity="center_horizontal">-->

    <ProgressBar
      android:layout_marginTop="20dp"
      android:id="@+id/progressBar2"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="280dp"
      android:progress="50"
      android:layout_height="wrap_content"
      android:progressDrawable="@drawable/main_progressbar" />
<!--      <ImageView-->
<!--        android:id="@+id/image_small_org"-->
<!--        android:layout_width="280dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/small_org" />-->

<!--    </RelativeLayout>-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/main_oringe_list"
      android:orientation="horizontal"
      android:layout_marginTop="20dp"
      android:gravity="center"
      >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 달성하지 못했어요"
        android:textColor="@color/black"
        android:textSize="15sp" />
      <ImageView
        android:id="@+id/image_sad_org"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sad_org" />
    </LinearLayout>

  </LinearLayout>
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/floatingActionButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:backgroundTint="#FF6B00"
    app:borderWidth="0dp"
    app:srcCompat="@drawable/main_menu" />

</LinearLayout>

