<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.record.RecordDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ssafy.oringe.ui.component.common.BackView
            android:id="@+id/challengeCreate_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:headerText="인증 상세보기" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="32dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@drawable/date_color_lightorange"
            android:text="--월 --일" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_date"
            android:background="@color/white"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
