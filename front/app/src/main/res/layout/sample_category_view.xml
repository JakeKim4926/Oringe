<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/template_category_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/category_color_pink"
        android:fontFamily="@font/suite"
        android:paddingLeft="13dp"
        android:paddingTop="6dp"
        android:paddingRight="13dp"
        android:paddingBottom="6dp"
        android:text="전체"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/category_border_pink"
        android:fontFamily="@font/suite"
        android:paddingLeft="13dp"
        android:paddingTop="6dp"
        android:paddingRight="13dp"
        android:paddingBottom="6dp"
        android:text="텍스트"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_category_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/category_border_pink"
        android:fontFamily="@font/suite"
        android:paddingLeft="13dp"
        android:paddingTop="6dp"
        android:paddingRight="13dp"
        android:paddingBottom="6dp"
        android:text="이미지"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_category_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/category_border_pink"
        android:fontFamily="@font/suite"
        android:paddingLeft="13dp"
        android:paddingTop="6dp"
        android:paddingRight="13dp"
        android:paddingBottom="6dp"
        android:text="음성"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_category_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/category_border_pink"
        android:fontFamily="@font/suite"
        android:paddingLeft="13dp"
        android:paddingTop="6dp"
        android:paddingRight="13dp"
        android:paddingBottom="6dp"
        android:text="영상"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>