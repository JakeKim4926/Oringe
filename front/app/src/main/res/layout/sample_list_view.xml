<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_component">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/challengeList_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/suite"
                android:maxWidth="260dp"
                android:textColor="@color/oringe_text"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/challengeList_alarm"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:contentDescription="ALARM"
                android:src="@drawable/alarm" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/challengeList_dDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite"
                android:textColor="@color/gray_600"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/challengeList_cycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/suite"
            android:textColor="@color/oringe_sub"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/challengeList_dateRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/suite"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>