<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modify"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modify_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textColor="@color/oringe_main"
        android:textSize="4sp" />

    <TextView
        android:id="@+id/plus_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/oringe_main"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/button_border_orange_thin" />

    <TextView
        android:id="@+id/register_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/button_color_mid"
        android:textStyle="bold"
        android:textColor="@color/gray_600"
        android:textAlignment="center" />

</LinearLayout>